@model Event
@{
    ViewData["Title"] = "Home Page";
}

<form action="/create/NewEvent" method="post" class="col-5">
    <h2 class="text-center">Create Wedding</h2>
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId" />
    <div class="form-group">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control" />
        <span class="text-danger" asp-validation-for="WedderOne"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weddertwo"></label>
        <input asp-for="Weddertwo" class="form-control" />
        <span class="text-danger" asp-validation-for="Weddertwo"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
</form>
